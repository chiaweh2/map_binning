# Flake8 configuration
[flake8]
max-line-length = 127
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    .venv,
    .env
ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    E501   # line too long (handled by black)
per-file-ignores = 
    __init__.py:F401  # Allow unused imports in __init__.py
